<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg">
    <LinearLayout
        android:id="@+id/a1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="2">
        <RelativeLayout
            android:id="@+id/b1"
            android:layout_width="match_parent"
            android:layout_height="190dp">
            <Button
                android:id="@+id/btn_second"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/tx"/>
            <LinearLayout
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:orientation="vertical"
                android:layout_centerInParent="true">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="95"
                        android:textSize="70sp"
                        android:textColor="#FFFFFF"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="分"
                        android:textSize="40sp"
                        android:textColor="#FFFFFF"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="108dp"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:text="优秀"
                        android:textColor="#FFFFFF"
                        android:textSize="24sp" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/b2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="50"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="身高"
                        android:textSize="20sp"
                        android:textColor="#FFFFFF"/>
                    <LinearLayout
                        android:layout_width="100dp"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="162"
                            android:textSize="35sp"
                            android:textColor="#FFFFFF"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="cm"
                            android:textSize="20sp"
                            android:textColor="#FFFFFF"/>
                    </LinearLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="标准"
                        android:textSize="20sp"
                        android:textColor="#FFFFFF"/>

                </LinearLayout>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#FFFFFF" />
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="50"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="体重"
                        android:textSize="20sp"
                        android:textColor="#FFFFFF"/>
                    <LinearLayout
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:gravity="center">
                        <TextView
                            android:id="@+id/txvw3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="43"
                            android:textSize="35sp"
                            android:textColor="#FFFFFF"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="kg"
                            android:textSize="20sp"
                            android:textColor="#FFFFFF"/>
                    </LinearLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="偏重"
                        android:textSize="20sp"
                        android:textColor="#FFFFFF"/>

                </LinearLayout>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#FFFFFF"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="50"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="BMI"
                        android:textSize="20sp"
                        android:textColor="#FFFFFF"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="16.4"
                        android:textSize="35sp"
                        android:textColor="#FFFFFF"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="标准"
                        android:textSize="20sp"
                        android:textColor="#FFFFFF"/>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="3"
        android:background="#FFFFFF">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp">
            <LinearLayout
                android:id="@+id/ll1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="vertical"
                android:layout_weight="1"
                android:background="#338FCC"
                android:layout_marginBottom="20dp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/iv1"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/zf"
                        android:layout_centerVertical="true"/>
                    <TextView
                        android:id="@+id/tv01"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="体脂率"
                        android:textSize="20sp"
                        android:layout_toEndOf="@+id/iv1"
                        android:layout_centerVertical="true"
                        android:textColor="#FFFFFF"/>
                    <TextView
                        android:id="@+id/tv02"
                        android:layout_width="220dp"
                        android:layout_height="wrap_content"
                        android:text="28.4%"
                        android:textSize="20sp"
                        android:layout_toEndOf="@+id/tv01"
                        android:layout_centerVertical="true"
                        android:gravity="center_horizontal"
                        android:textColor="#FFFFFF"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="偏瘦"
                        android:textSize="20sp"
                        android:layout_toEndOf="@+id/tv02"
                        android:layout_centerVertical="true"
                        android:textColor="#FFFFFF"/>
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="vertical"
                android:layout_weight="1"
                android:background="#3C8DC4"
                android:layout_marginBottom="20dp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/iv2"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/s"
                        android:layout_centerVertical="true"/>
                    <TextView
                        android:id="@+id/tv11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="水分率"
                        android:textSize="20sp"
                        android:layout_toEndOf="@+id/iv2"
                        android:layout_centerVertical="true"
                        android:textColor="#FFFFFF"/>
                    <TextView
                        android:id="@+id/tv12"
                        android:layout_width="220dp"
                        android:layout_height="wrap_content"
                        android:text="70.0%"
                        android:textSize="20sp"
                        android:layout_toEndOf="@+id/tv11"
                        android:layout_centerVertical="true"
                        android:gravity="center_horizontal"
                        android:textColor="#FFFFFF"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="正常"
                        android:textSize="20sp"
                        android:layout_toEndOf="@+id/tv12"
                        android:layout_centerVertical="true"
                        android:textColor="#FFFFFF"/>
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll3"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="vertical"
                android:layout_weight="1"
                android:background="#2B91D5"
                android:layout_marginBottom="20dp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/iv3"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/jr"
                        android:layout_centerVertical="true"/>
                    <TextView
                        android:id="@+id/tv21"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="肌肉率"
                        android:textSize="20sp"
                        android:layout_toEndOf="@+id/iv3"
                        android:layout_centerVertical="true"
                        android:textColor="#FFFFFF"/>
                    <TextView
                        android:id="@+id/tv22"
                        android:layout_width="220dp"
                        android:layout_height="wrap_content"
                        android:text="56.4%"
                        android:textSize="20sp"
                        android:layout_toEndOf="@+id/tv21"
                        android:layout_centerVertical="true"
                        android:gravity="center_horizontal"
                        android:textColor="#FFFFFF"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="正常"
                        android:textSize="20sp"
                        android:layout_toEndOf="@+id/tv22"
                        android:layout_centerVertical="true"
                        android:textColor="#FFFFFF"/>
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll4"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="vertical"
                android:layout_weight="1"
                android:background="#2B91D5"
                android:layout_marginBottom="20dp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/iv4"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/gk"
                        android:layout_centerVertical="true"/>
                    <TextView
                        android:id="@+id/tv31"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="骨质    "
                        android:textSize="20sp"
                        android:layout_toEndOf="@+id/iv4"
                        android:layout_centerVertical="true"
                        android:textColor="#FFFFFF"/>
                    <TextView
                        android:id="@+id/tv32"
                        android:layout_width="220dp"
                        android:layout_height="wrap_content"
                        android:text="2.0"
                        android:textSize="20sp"
                        android:layout_toEndOf="@+id/tv31"
                        android:layout_centerVertical="true"
                        android:gravity="center_horizontal"
                        android:textColor="#FFFFFF"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="正常"
                        android:textSize="20sp"
                        android:layout_toEndOf="@+id/tv32"
                        android:layout_centerVertical="true"
                        android:textColor="#FFFFFF"/>
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll5"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="vertical"
                android:layout_weight="1"
                android:background="#1A94E6">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/iv5"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/dx"
                        android:layout_centerVertical="true"/>
                    <TextView
                        android:id="@+id/tv41"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="代谢    "
                        android:textSize="20sp"
                        android:layout_toEndOf="@+id/iv5"
                        android:layout_centerVertical="true"
                        android:textColor="#FFFFFF"/>
                    <TextView
                        android:id="@+id/tv42"
                        android:layout_width="220dp"
                        android:layout_height="wrap_content"
                        android:text="1200.0"
                        android:textSize="20sp"
                        android:layout_toEndOf="@+id/tv41"
                        android:layout_centerVertical="true"
                        android:gravity="center_horizontal"
                        android:textColor="#FFFFFF"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="正常"
                        android:textSize="20sp"
                        android:layout_toEndOf="@+id/tv42"
                        android:layout_centerVertical="true"
                        android:textColor="#FFFFFF"/>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>